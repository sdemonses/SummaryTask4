<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <resource-ref>
        <description>DB Connection</description>
        <res-ref-name>jdbc/tourOp</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <!--============================================================
        Security filter.
        1) admin: admin commands
        2) client: client commands
        3) manager: manager commands
        4) commons: commands for all roles
        5) out-of-control: commands without access control
        Delimiter - space/tab
    =============================================================-->


    <filter>
        <filter-name>CommandAccessFilter</filter-name>
        <filter-class>ua.nure.biblyi.SummaryTask4.web.filter.CommandAccessFilter</filter-class>
        <init-param>
            <param-name>admin</param-name>
            <param-value></param-value>
        </init-param>

        <init-param>
            <param-name>client</param-name>
            <param-value>profile</param-value>
        </init-param>

        <init-param>
            <param-name>manager</param-name>
            <param-value></param-value>
        </init-param>

        <init-param>
            <param-name>common</param-name>
            <param-value>logout noCommand password</param-value>
        </init-param>

        <init-param>
            <param-name>out-of-control</param-name>
            <param-value>login signUp index contact about language tour filter</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>CommandAccessFilter</filter-name>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>


    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>ua.nure.biblyi.SummaryTask4.web.filter.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/WEB-INF/*</url-pattern>
        <servlet-name>Controller</servlet-name>
    </filter-mapping>

    <!--============================================================
        Controller
    =============================================================-->

    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>ua.nure.biblyi.SummaryTask4.web.Controller</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>

    <!--============================================================
        Context listener
    =============================================================-->
    <listener>
        <listener-class>ua.nure.biblyi.SummaryTask4.web.listener.ContextListener</listener-class>
    </listener>


    <!--============================================================
        Error page
    =============================================================-->
    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/WEB-INF/jsp/error_page.jsp</location>
    </error-page>

    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/error_page.jsp</location>
    </error-page>

</web-app>